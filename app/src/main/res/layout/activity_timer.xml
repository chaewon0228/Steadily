    <TextView
        android:id="@+id/txtTimerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="일찍 일어나기"
        android:textSize="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/timeCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txtTimerList"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/txtTimerMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTimerList"
            android:layout_marginBottom="100dp"
            android:text="5"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareb"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtTimerMinute"
            android:layout_marginBottom="100dp"
            android:text=":"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareb"
            />

        <TextView
            android:id="@+id/txtTimerSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtTimerMinute"
            android:layout_marginBottom="100dp"
            android:text="00"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareb"
            />
    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttons_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/timeCount"
        android:gravity="center">

